{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Request Schema",
  "description": "Common schema for requests including metadata",
  "required": ["request_id", "timestamp", "intent", "tools"],
  "properties": {
    "request_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this request"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the response"
    },
    "intent": {
      "type": "string",
      "enum": ["weather", "stock", "other"],
      "description": "The intent of the request"
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "List of tools to use"
    },
    "params": {
      "type": "object",
      "description": "Parameters for the request"
    },
    "original_text": {
      "type": "string",
      "description": "The original user input"
    },
    "validation_error": {
      "type": "string",
      "description": "Details of any validation errors"
    }
  }
}