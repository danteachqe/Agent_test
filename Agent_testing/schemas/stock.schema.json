{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Stock Parameters Schema",
  "description": "Schema for stock request parameters",
  "required": ["ticker"],
  "properties": {
    "ticker": {
      "type": "string",
      "pattern": "^[A-Z]{1,5}$",
      "description": "Stock ticker symbol (1-5 uppercase letters)"
    },
    "include_details": {
      "type": "boolean",
      "default": false,
      "description": "Whether to include detailed company information"
    },
    "currency": {
      "type": "string",
      "enum": ["USD", "EUR", "GBP"],
      "default": "USD",
      "description": "Currency for price data"
    }
  }
}
